//
// VARIABLES
//

$color-text-default = #ffffff
$primary-color = #222222
$secondary-color = #333333

//
// MIXINS
//

transition()
  transition: all 0.3s ease-out

//
// RESET
//

*
  box-sizing: border-box
  color: $color-text-default
  list-style: none
  margin: 0
  padding: 0

body
  background-color: $primary-color

p
  line-height: 30px

//
// HEADER
//

.header
  background: $secondary-color
  border-bottom: 1px solid #555555
  margin-bottom: 20px

  &__links
    display: flex
    justify-content: flex-start
    align-items: center
    height: 80px
    margin: 0 20px

  &__link
    transition()
    text-decoration: none
    height: 100%;
    align-items: center;
    display: inline-flex;
    position: relative
    padding: 0 20px;

    &:hover
      background: $primary-color

  .highlight
    font-size: 30px


//
// INDEX
//

.instagram
  margin: 0 auto

  &__link
    margin-bottom: 10px

  &__wrapper
    position: relative

  &__overlay
    transition()
    background: $primary-color;
    opacity: 0.5
    height: 100%;
    width: 100%;
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;

    &:hover
      opacity: 0

//
// ABOUT
//

.about
  margin-left: 50%
  transform: translateX(-50%)

  &__title
    margin-bottom: 20px
    text-align: center

  &__projects
    margin-left: 20px